<Window x:Class="PatrolScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatrolScheduler"
        mc:Ignorable="d"
        Title="PatrolScheduler" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File"/>
                <MenuItem Header="Manage">
                    <MenuItem Header="Customers"/>
                    <MenuItem Header="Employees"/>
                    <MenuItem Header="Patrol Schedules"/>
                    <MenuItem Header="Patrol Cars"/>
                </MenuItem>
            </Menu>

        </DockPanel>
        <ContentControl x:Name="ContentControl" Grid.Row="1">

        </ContentControl>
    </Grid>

</Window>
